 name: Move new issues into Todo

on:
  issues:
    types: [assigned]

jobs:
  automate-project-columns:
    runs-on: ubuntu-latest
    steps:
      - uses: alex-page/github-project-automation-plus@v0.8.0
        with:
          project: Todo
          column: Triage
          repo-token: ${{ secrets.GITHUB_TOKEN }}
